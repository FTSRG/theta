specification instance {
	
	property s : {
		// Variables (variable declaration + range def. + initial value)
		local var a : boolean
		initial a = false
		
		local var b : boolean
		initial b = false
		
		local var c : boolean
		initial c = false
		
		
		// Location variable definition
		local var loc : integer
		invariant loc >= 0 and loc <= 2
		initial loc = 1
		// Automaton state - TTMC loc mapping
		// s0 = 2
		// initial = 1
		// end = 0
		
		
		// Structure
		transition loc' = (
			if loc = 0  then 1 else 
			if loc = 1  then 2 else 
			if loc = 2  then 0 
 else			loc // stay in the same location if no IM transitions are allowed
		)
						
		// Transitions
		transition (
			if loc = 1  then true 
 else			a' = a // keep the old value if it is not assigned
		)
		transition (
			if loc = 1  then true 
 else			b' = b // keep the old value if it is not assigned
		)
		transition (
			if loc = 2  then c' = (a  or  b) 
 else			c' = c // keep the old value if it is not assigned
		)

	}
models

G ((loc = 0) imply (a =  false  and c =  true ))
}
