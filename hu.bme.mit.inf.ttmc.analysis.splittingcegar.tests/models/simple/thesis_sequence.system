specification System {
	property safe : {
		local var x : integer
		local var y : integer
		local var z : integer
		invariant 0 <= x and x <= 5
		invariant 0 <= y and y <= 1
		invariant 0 <= z and z <= 1
		invariant (x = 0 or x = 5) imply (y = 0 and z = 0)
		
		initial x = 0 and y = 0 and z = 0
		
		transition x = 0 and y = 0 and z = 0 and x' = 1 and y' = 1 and z' = 1
		        
		        or x = 1 and y = 0 and z = 0 and x' = 3 and y' = 0 and z' = 0
		        or x = 1 and y = 0 and z = 1 and x' = 3 and y' = 0 and z' = 1
		        or x = 1 and y = 1 and z = 0 and x' = 3 and y' = 1 and z' = 0
		        
		        or x = 2 and y = 0 and z = 0 and x' = 3 and y' = 1 and z' = 1
		        
		        or x = 2 and y = 0 and z = 1 and x' = 4 and y' = 0 and z' = 1
		        or x = 2 and y = 1 and z = 0 and x' = 4 and y' = 1 and z' = 0
		        or x = 2 and y = 1 and z = 1 and x' = 4 and y' = 1 and z' = 1
		        
		        or x = 4 and y = 0 and z = 0 and x' = 5 and y' = 0 and z' = 0
	} models G(not x = 5
				and (x <= 0 or not x <= 0) and (x <=2 or not x <= 2)) 
	)
}