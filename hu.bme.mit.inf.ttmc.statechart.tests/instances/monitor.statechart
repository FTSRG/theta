specification Monitor {
	
	signal humanDetected
	signal animalDetected
	signal alert
	
	statechart monitor := {
		var numAlerts : integer := 0
		
		region main {
			initial init
			state start
			state detected
			state error
	
			transition from init to start
			transition from start to start by default
			
			transition from start to detected upon humanDetected
			transition from start to detected upon animalDetected
			
			transition from detected to start upon alert / assign numAlerts := numAlerts + 1
			transition from detected to error by default
			transition from error to error by default
		}
	}
	
}


