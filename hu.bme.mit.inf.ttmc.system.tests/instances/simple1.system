
specification Test {
	property s : {
		
		var reset : integer
		var x : integer
		var y : integer
		
		invariant 0 <= reset and reset <= 1
		invariant 0 <= x and x <= 2
		invariant 0 <= y and y <= 2
		
		initial reset = 0
		initial x = 0
		initial y = 1
		
		transition reset' >= 0 and reset' <= 1
		transition x' = (
			if reset = 1 then 0
			else if x < y then x + 1
			else if x = y then 0
			else x
		)
		transition y' = (
			if reset = 1 then 0
			else if x = y and not y = 2 then y + 1
			else if x = y then 0
			else y
		)
	} models G(x < y or reset = 1) // Does not hold
}