specification Fischer(ref lock : int, a : int, b : int) {	
	// lock := 0
		
	automaton fischer(ref x : clock, i : int) := {
		// x := 0
		
		init loc sleep
		loc wait { x <= a }
		loc try
		loc crit
		
		sleep -> wait {
			assume lock = 0;
			x := 0
		}
		
		wait -> try {
			lock := i;
			x := 0
		}
		
		try -> sleep {
			assume x >= b;
			assume lock /= i
		}
		
		try -> crit {
			assume x >= b;
			assume lock = i
		}
		
		crit -> sleep {
			lock := 0
		}
	}
}