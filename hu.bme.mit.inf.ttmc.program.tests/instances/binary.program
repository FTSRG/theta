specification BinarySearch {
	
	function sorted(a : array integer of integer, l : integer, u : integer) : boolean :=
		forall (i : integer) : i >= l and i < u imply a[i] <= a[i + 1]
	
	function contains(a : array integer of integer, l : integer, u : integer, e : integer) : boolean :=
		exists (i : integer) : i >= l and i <= u and a[i] = e
	
	@pre sorted(a, l, u)
	@post result equal contains(a, l, u, e)
	procedure binarySearch(a : array integer of integer, l : integer, u : integer, e : integer) : boolean {
		if l > u then {
			return false;
		} else {
			var m : integer := (l + u) div 2;
			if a[m] = e then {
				return true;
			} else if a[m] < e then {
				return binarySearch(a, m + 1, u, e);
			} else {
				return binarySearch(a, m - 1, u, e);
			}
		}
	}
}